<%= simple_form_for @registration, url: register_someone_event_path(@event), :html => { role: 'form' } do |f| %>

  <% # FIXME - set up ajax autocomplete %>

  <%= f.input :registrant_email,
                as: :string,
                :wrapper_html => { id: 'registrant-email' },
                :input_html => {  autocomplete: 'off',
                                  data: {
                                    source: Registrant.by_recent.map(&:email).to_json }
                                  } %>

  <%= f.submit "register him/her to this event", class: 'btn btn-sm btn-primary' %>

<% end %>
